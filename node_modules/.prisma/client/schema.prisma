generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/dev.db"
}

model usuario {
  id         Int          @id @default(autoincrement())
  nome       String
  email      String       @unique
  senha      String
  data       DateTime
  status     Boolean      @default(true)
  prescricao prescricao[]
}

model remedio {
  id         Int          @id @default(autoincrement())
  nome       String
  funcao     String
  dosagem    String
  status     Boolean      @default(true)
  prescricao prescricao[]
}

model prescricao {
  id         Int         @id @default(autoincrement())
  usuario    usuario     @relation(fields: [idUsuario], references: [id])
  idUsuario  Int
  remedio    remedio     @relation(fields: [idRemedio], references: [id])
  idRemedio  Int
  observacao String?
  frequencia Int
  dataInicio DateTime
  dataFim    DateTime
  status     Boolean     @default(true)
  historico  historico[]
}

model historico {
  id           Int        @id @default(autoincrement())
  prescricao   prescricao @relation(fields: [idPrescricao], references: [id])
  idPrescricao Int
  dataAtual    DateTime
  status       Boolean    @default(true)
}
